<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="org.hibernate.tutorial.jpa">


        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"></property>
            <property name="hibernate.connection.username" value="postgres"></property>
            <property name="hibernate.connection.password" value="postgres"></property>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"></property>
            <property name="hibernate.show_sql" value="true"></property>
            <property name="hibernate.hbm2ddl.auto" value="create"></property>
            <property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1/univerlesson02_orm"></property>
            <property name="hibernate.connection.CharSet" value="utf8"></property>
            <property name="hibernate.connection.characterEncoding" value="utf8"></property>
            <property name="hibernate.connection.useUnicode" value="true"></property>
        </properties>
    </persistence-unit>
</persistence>